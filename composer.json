{
    "name": "trovee/event-relay",
    "description": "A flexible event tracking system for multiple providers",
    "type": "library",
    "license": "MIT",
    "keywords": ["event", "tracking", "analytics", "relay", "multi-provider"],
    "homepage": "https://github.com/trovee/event-relay",
    "readme": "README.md",
    "support": {
        "issues": "https://github.com/trovee/event-relay/issues",
        "source": "https://github.com/trovee/event-relay"
    },
    "authors": [
        {
            "name": "Serhan KÜRKÇÜOĞLU",
            "email": "serhan.kurkcuoglu@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "pestphp/pest": "^2.23",
        "orchestra/testbench": "^8.13",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.35"
    },
    "autoload": {
        "psr-4": {
            "Trovee\\EventRelay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Trovee\\EventRelay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "reset": "rm -rf vendor composer.lock && composer install",
        "test": "./vendor/bin/pest",
        "static-analysis": "./vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "sort-packages": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
